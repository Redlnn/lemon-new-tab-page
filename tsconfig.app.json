{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    ".wxt/i18n/**/*.ts",
    ".wxt/types/**/*.ts",
    "entrypoints/**/*.ts",
    "entrypoints/**/*.vue",
    "types/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [".output", "scripts/**/*.ts"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@newtab/*": ["./entrypoints/newtab/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "vue"
  }
}
